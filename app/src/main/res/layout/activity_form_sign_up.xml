<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_form_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="twice.pbdtest.FormSignUp">

    <TextView
        android:text="password :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/txtPassword"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="29dp"
        android:id="@+id/editTxtEmail"
        android:hint="insert your email here" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTxtPassword"
        android:hint="password"
        android:layout_alignBaseline="@+id/txtPassword"
        android:layout_alignBottom="@+id/txtPassword"
        android:layout_alignStart="@+id/editTxtEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:text="email :"
        android:layout_alignBaseline="@+id/editTxtEmail"
        android:layout_alignBottom="@+id/editTxtEmail"
        android:layout_alignStart="@+id/txtPassword"
        android:layout_marginStart="13dp" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignUp"
        android:onClick="signUp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txtPassword" />

    <TextView
        android:text="name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtPassword"
        android:layout_alignStart="@+id/txtPassword"
        android:layout_marginTop="14dp"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editTxtPassword"
        android:layout_alignStart="@+id/editTxtPassword"
        android:id="@+id/editTxtName"
        android:hint="insert your name here" />

</RelativeLayout>
